{
  // disable jedi
  "python.jediEnabled": false,
  "python.formatting.provider": "yapf",

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "python",
    "swift"
  ],

  "languageserver": {
    "sourcekit-lsp": {
      "filetypes": ["swift"],
      "command": "sourcekit-lsp"
    }
  }
}

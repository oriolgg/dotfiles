[core]
    excludesfile = /Users/oriol/.gitignore_global
    editor =  -v
    pager = diff-so-fancy | less --tabs=4 -RFX
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path = 
[user]
    name = Oriol Garcia
[color]
    ui = true
[alias]
    add = add -u
    co = checkout
    st = status
    ci = commit
    br = branch
    discard = checkout -- .
[push]
    default = current

[init]
    templatedir = ~/.git_template
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[credential]
    helper = osxkeychain
[commit]
    template = /Users/oriol/.stCommitMsg
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"
[merge]
    tool = meld
[mergetool]
    prompt = false
[mergetool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
